{
	"compilerOptions": {
		"target": "es2024",
		"module": "NodeNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "nodenext",
		"types": [
			"bun",
			"jest"
		]
	},
	"include": [
		"src/**/*",
		"../test/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"build"
	]
}